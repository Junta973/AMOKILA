{% extends 'forms_base.html.twig' %}

{% block title %}DETAILS TASK{% endblock %}

{% block titleHeader %}DETAILS TASK #{{ task.id }} {{ task.taskName }}{% endblock %}
{% block body %}

    <div class="col-md-12 view">
        <div class="row">
            <div class="col-md-6"><h6>Projet:</h6></div>
            <div class="col-md-6"><p>{{ task.projet.projectName }}</p></div>
        </div>
        <div class="row">
            <div class="col-md-6"><h6>ID Task:</h6></div>
            <div class="col-md-6"><p>{{ task.id }}</p></div>
        </div>
        <div class="row">
            <div class="col-md-6"><h6>Réference de Task:</h6></div>
            <div class="col-md-6"><p>{{ task.taskRef }}</p></div>
        </div>
        <div class="row">
            <div class="col-md-6"><h6>Nom de task:</h6></div>
            <div class="col-md-6"><p>{{ task.taskName }}</p></div>
        </div>
        <div class="row">
            <div class="col-md-6"><h6>Description:</h6></div>
            <div class="col-md-6"><p>{{ task.taskDescription }}</p></div>
        </div>
        <div class="row">
            <div class="col-md-6"><h6>Date début:</h6></div>
            <div class="col-md-6"><p>{{ task.dateStart|date() }}</p></div>
        </div>
        <div class="row">
            <div class="col-md-6"><h6>Date Fin:</h6></div>
            <div class="col-md-6"><p>{{ task.dateEnd|date() }}</p></div>
        </div>
        <div class="row">
            <div class="col-md-6"><h6>Cost:</h6></div>
            <div class="col-md-6"><p>{{ task.taskCost|number_format(2,'.','') }}</p></div>
        </div>
    </div>


{% endblock %}