{% extends 'admin/admin_base.html.twig' %}

{% block title %}Admin Dashboard!{% endblock %}

{% block body %}

    <div class="header-body">
        <a href="{{ path('app_admin_taskList_ajouter') }}" class="btn btn-dark w-240 mt-5 ml-2">Add task</a>
    </div>
    <div class="container-body">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        <table>
            <thead>
            <tr>
                <th>Ref</th>
                <th>Task name</th>
                <th>Progress</th>
                <th style="width: 30%;">Action</th>
            </tr>
            </thead>
            <tbody>

            {% for task in tasks %}
            <tr>
                <td>{{ task.taskRef }}</td>
                <td>{{ task.taskName }}</td>
                <th>
                    {% set etat = 'warning' %}
                    {% if task.progress == 100 %}
                        {% set etat = 'success' %}
                    {% elseif task.progress == 0 %}
                        {% set etat = 'light' %}
                    {% endif%}
                    <a class="badge badge-{{ etat }} font-14">{{ task.progress ? task.progress : 0 }}%</a>
                </th>
                <td>
                    <a href="{{ path('app_admin_taskList_modifier',{'id':task.id}) }}" class="btn btn-warning font-14 w-100 mt-2">Modify</a>
                    <a href="{{ path('app_admin_taskList_delete',{'id':task.id}) }}" class="btn btn-danger font-14 w-100 mt-2">Delete</a>
                    <a href="{{ path('app_admin_taskList_view',{'id':task.id}) }}" class="btn btn-secondary font-14 w-100 mt-2">More</a>
                </td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="4">La liste est vide.</td>
                </tr>
            {% endfor %}

            </tbody>


        </table>


    </div>

{% endblock %}