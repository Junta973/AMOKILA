{% extends 'admin/admin_base.html.twig' %}

{% block title %}Admin Dashboard!{% endblock %}

{% block body %}

    <div class="header-body">
        <a href="{{ path('app_admin_material_ajouter') }}" class="btn btn-dark w-240 mt-5 ml-2">Add Material</a>
    </div>
    <div class="container-body">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        <table>
            <thead>
            <tr>
                <th>Ref</th>
                <th>Material name</th>
                <th>Etat</th>
                <th style="width: 30%;">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for material in allMaterials %}
            <tr>
                <td>{{ material.refMaterial }}</td>
                <td>{{ material.nameMaterial }}</td>
                <th>
                    <a class="badge badge-{{ material.dateValidationOut > date('now') ? 'success' : 'danger' }} font-14">
                        {{ material.dateValidationOut > date('now') ? 'Valide' : 'Non Valide' }}
                    </a>
                </th>
                <td>
                    <a href="{{ path('app_admin_material_modifier',{'id':material.id}) }}" class="btn btn-warning font-14 w-100 mt-2">Modify</a>
                    <a href="{{ path('app_admin_material_delete',{'id':material.id}) }}" class="btn btn-danger font-14 w-100 mt-2">Delete</a>
                    <a href="{{ path('app_admin_material_view',{'id':material.id}) }}" class="btn btn-secondary font-14 w-100 mt-2">More</a>
                </td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="4">La liste est vide.</td>
                </tr>
            {% endfor %}
            </tbody>

        </table>


    </div>

{% endblock %}
