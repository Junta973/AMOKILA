{% extends 'forms_base.html.twig' %}

{% block title %}MODIFIER UTILISATEUR{% endblock %}

{% block titleHeader %}MODIFIER UTILISATEUR{% endblock %}
{% block body %}

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Avatar</label>
                <span class="btn-file">
                    <div>
                        {{ form_widget(form.avatar) }}
                    </div>

                </span>
                <span class="error-field">{{ form_errors(form.avatar) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Nom</label>
                {{ form_widget(form.name) }}
                <span class="error-field">{{ form_errors(form.name) }}</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Prénom</label>
                {{ form_widget(form.firstname) }}
                <span class="error-field">{{ form_errors(form.firstname) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">E-mail</label>
                {{ form_widget(form.email) }}
                <span class="error-field">{{ form_errors(form.email) }}</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Pseudo</label>
                {{ form_widget(form.username) }}
                <span class="error-field">{{ form_errors(form.username) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Mot de passe</label>
                {{ form_widget(form.plainPassword.first) }}
                <span class="error-field">{{ form_errors(form.plainPassword.first) }}</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Confirmer mot de passe</label>
                {{ form_widget(form.plainPassword.second) }}
                <span class="error-field">{{ form_errors(form.plainPassword.first) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Niveau</label>
                {{ form_widget(form.level) }}
                <span class="error-field">{{ form_errors(form.level) }}</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Compétence</label>
                {{ form_widget(form.skills) }}
                <span class="error-field">{{ form_errors(form.skills) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Métier</label>
                {{ form_widget(form.profession) }}
                <span class="error-field">{{ form_errors(form.username) }}</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Taux horaire</label>
                {{ form_widget(form.hourly_fee) }}
                <span class="error-field">{{ form_errors(form.hourly_fee) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Type de Contrat</label>
                {{ form_widget(form.contrat) }}
                <span class="error-field">{{ form_errors(form.contrat) }}</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Département</label>
                {{ form_widget(form.departement) }}
                <span class="error-field">{{ form_errors(form.departement) }}</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Date de naissance</label>
                {{ form_widget(form.birthdate) }}
                <span class="error-field">{{ form_errors(form.birthdate) }}</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="wc-100">Roles</label>
                {{ form_widget(form.roles) }}
                <span class="error-field">{{ form_errors(form.roles) }}</span>
            </div>
        </div>
    </div>
    <hr>
    <div class="wc-100 text-center">
        <a href="{{ path('app_admin_team_management') }}" class="btn btn-danger">Annuler</a>
        <button type="submit" class="btn btn-light">Modifier</button>
    </div>

    {{ form_end(form) }}



{% endblock %}