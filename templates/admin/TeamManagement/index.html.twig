{% extends 'admin/admin_base.html.twig' %}

{% block title %}Admin Dashboard!{% endblock %}

{% block body %}

    <div class="header-body">
        <a href="{{ path('app_admin_utilisateur_ajouter') }}" class="btn btn-dark w-240 mt-5 ml-2"><i class="fa fa-user"></i> add user</a>
    </div>
    <div class="container-body">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        <table>
            <thead>
            <tr>
                <th>Photo</th>
                <th>Name</th>
                <th>FirstName</th>
                <th>Profession</th>
                <th>Skills</th>
                <th>Level</th>
                <th>DÃ©partement</th>
                <th style="width: 30%;">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                <td><img width="75" height="75" src="{{ user.avatar ? vich_uploader_asset(user.avatar, 'imageFile', 'App\\Entity\\Media') :  asset('assets/img/profile.png') }}" alt="" /></td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.profession }}</td>
                <td>{{ user.skills }}</td>
                <td>{{ user.level }}</td>
                <td>{{ user.departement }}</td>
                <td class="text-center">
                    <a href="{{ path('app_admin_utilisateur_modifier',{'id':user.id}) }}" class="text-primary w-100 mt-2"><i class="fa fa-pencil"></i></a>
                    <a href="{{ path('app_admin_utilisateur_delete',{'id': user.id}) }}" class="text-danger w-100 mt-2"><i class="fa fa-trash"></i></a>
                    <a href="" class="text-info w-100 mt-2"><i class="fa fa-eye"></i></a>
                </td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="8">La liste est vide.</td>
                </tr>
            {% endfor %}
            </tbody>


        </table>


    </div>

{% endblock %}