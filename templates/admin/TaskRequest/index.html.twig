{% extends 'admin/admin_base.html.twig' %}

{% block title %}Admin Dashboard!{% endblock %}

{% block body %}

    <div class="header-body">
        <button class="btn btn-dark w-240 mt-5 ml-2">Ref filter</button>
        <button class="btn btn-dark w-240 mt-5 ml-2">Task name filter</button>
        <a href="{{ path('app_admin_taskRequest_ajouter') }}" class="btn btn-dark w-240 mt-5 ml-2">Add task</a>
    </div>
    <div class="container-body">

        <table>
            <thead>
            <tr>
                <th>Ref</th>
                <th>Task name</th>
                <th>Progress</th>
                <th style="width: 30%;">Action</th>
            </tr>
            </thead>
            <tbody>

            {% for task in tasks %}
            <tr>
                <td>{{ task.taskRef }}</td>
                <td>{{ task.taskName }}</td>
                <th>
                    <a class="badge badge-success font-14">{{ task.progress ? task.progress : 0 }}%</a>
                </th>
                <td>
                    <a href="{{ path('app_admin_taskRequest_modifier',{'id':task.id}) }}" class="btn btn-warning font-14 w-100 mt-2">Modify</a>
                    <a href="{{ path('app_admin_taskRequest_delete',{'id':task.id}) }}" class="btn btn-danger font-14 w-100 mt-2">Delete</a>
                    <a href="{{ path('app_admin_taskRequest_view',{'id':task.id}) }}" class="btn btn-secondary font-14 w-100 mt-2">More</a>
                </td>
            </tr>
            {% endfor %}

            </tbody>


        </table>


    </div>

{% endblock %}