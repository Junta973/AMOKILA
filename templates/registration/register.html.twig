{% extends 'forms_base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}
    <h1>Inscription</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="form-group">
        <label>E-mail</label>
        {{ form_widget(registrationForm.email) }}
        <span class="error-field">{{ form_errors(registrationForm.email) }}</span>
    </div>
    <div class="form-group">
        <label>Mot de passe</label>
        {{ form_widget(registrationForm.plainPassword) }}
        <span class="error-field">{{ form_errors(registrationForm.plainPassword) }}</span>
    </div>
    <div class="form-group customcheckbox">
        <label>Conditions générales</label>
        {{ form_widget(registrationForm.agreeTerms) }}
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn">Valider</button>
    </div>
    <div class="text-center">
        <a href="{{ path('app_home') }}"><h1><i class="fa fa-undo"></i> Retour</h1></a>
    </div>

    {{ form_end(registrationForm) }}
{% endblock %}
